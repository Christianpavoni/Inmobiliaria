@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Registrar";
}
@if (TempData["Error"] != null)
{
    @Html.Raw("<strong style='color: red;'> " + TempData["Error"] + "</strong>")
}

<h1>Registrar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control"/>
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePago" class="control-label"></label>
                <input asp-for="FechaDePago" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")"/>
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contrato</label><br />
                @("* Inquilino: " + ViewBag.Contrato.Inquilino.Nombre+ " " + ViewBag.Contrato.Inquilino.Apellido)<br />
                @("* Direccion Inmueble: " + ViewBag.Contrato.Inmueble.Direccion)<br />

                <input type="hidden" name="IdContrato" value="@ViewBag.Contrato.IdContrato">

            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@TempData["returnUrl"]">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
