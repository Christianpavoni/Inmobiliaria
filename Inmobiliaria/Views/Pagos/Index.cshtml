@model IEnumerable<Inmobiliaria.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}
@Html.Raw("<strong style='color: green;'>" + TempData["Mensaje"] + "</strong>")

@if (TempData["Error"] != null)
{
    @Html.Raw("<strong style='color: red;'>" + TempData["Error"] + "</strong>")
    <a asp-action="Create" asp-controller="Contratos">(Crear Contrato)</a>
}


<h1>Pagos</h1>

<p>
    <a asp-action="Create">Registrar Pago</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDePago)
            </th>
            <th>
                Inquilino
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Importe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDePago)
                </td>
                <td>
                    @(item.Contrato.Inquilino.Nombre + " " + item.Contrato.Inquilino.Apellido)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdPago }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdPago }) |
                    @if (!User.IsInRole("Empleado"))
                    {
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPago })
                    }
                    </td>
            </tr>
        }
    </tbody>
</table>
