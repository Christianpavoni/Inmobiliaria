@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar";
}
@Html.Raw("<strong style='color: red;'>" + TempData["Error"] + "</strong>")

<h1>Editar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePago" class="control-label"></label>
                <input asp-for="FechaDePago" class="form-control" />
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Contrato</label><br />
                @("* Inquilino: " + Model.Contrato.Inquilino.Nombre+ " " + Model.Contrato.Inquilino.Apellido)<br />
                @("* Direccion Inmueble: " + Model.Contrato.Inmueble.Direccion)<br />

                <input type="hidden" name="IdContrato" value="@Model.Contrato.IdContrato">
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@TempData["returnUrl"]">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
