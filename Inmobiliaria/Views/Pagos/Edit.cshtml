@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Editar";
}
@Html.Raw("<strong style='color: red;'>" + TempData["Error"] + "</strong>")

<h1>Editar</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePago" class="control-label"></label>
                <input asp-for="FechaDePago" class="form-control" />
                <span asp-validation-for="FechaDePago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdContrato" class="control-label"></label>
                <select class="form-control" name="IdContrato">
                    @foreach (var item in (IList<Contrato>)ViewBag.Contratos)
                    {
                        @:<option @(item.IdContrato == Model.IdContrato ? "selected" : "") value="@item.IdContrato">@("Inquilino: " + item.Inquilino.Apellido + " - Direccion Inmueble: " + item.Inmueble.Direccion)</option>
                    }
                </select>
                <span asp-validation-for="IdContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
